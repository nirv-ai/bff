{
  "name": "bff",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "dev": "concurrently 'yarn build --watch' 'yarn start:dev'",
    "build": "tsc",
    "start:dev": "nodemon -q dist/index.js",
    "start": "node build/src/index.js",
    "prettier": "prettier --ignore-unknown --write 'src/**'",
    "eslint": "eslint --fix 'src/**'"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "concurrently": "7.5.0",
    "cors": "^2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "pg-promise": "^10.12.1",
    "pino-http": "^8.2.1",
    "ramda": "0.28.0",
    "swagger-jsdoc": "^6.2.5",
    "typescript": "4.8.4",
    "validator": "^13.7.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix 'src/**"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1",
    "@types/cors": "^2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.14",
    "@types/express-session": "^1",
    "@types/jest": "29.2.0",
    "@types/jsonwebtoken": "^8",
    "@types/multer": "^1",
    "@types/node": "^18.11.7",
    "@types/ramda": "0.28.18",
    "@types/swagger-jsdoc": "^6",
    "@types/validator": "^13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "webpack": "^5.74.0"
  }
}
