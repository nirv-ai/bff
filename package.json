{
  "name": "bff",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@3.2.4",
  "scripts": {
    "dev": "concurrently 'yarn build --watch' 'yarn start:dev'",
    "build": "tsc",
    "start:dev": "nodemon -q dist/index.js",
    "start": "node build/src/index.js",
    "prettier": "prettier --ignore-unknown --write 'src/**'",
    "eslint": "eslint --fix 'src/**'"
  },
  "dependencies": {
    "concurrently": "7.5.0",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "ramda": "0.28.0",
    "typescript": "4.8.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix 'src/**"
    ],
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.0",
    "@types/node": "^18.11.7",
    "@types/ramda": "0.28.18",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "webpack": "^5.74.0"
  }
}
